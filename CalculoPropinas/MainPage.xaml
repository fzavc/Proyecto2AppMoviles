<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CalculoPropinas.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CalculoPropinas.MainPage">
    <ContentPage.BindingContext>
        <viewModels:MainViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Monto de la boleta:" />
        <Entry Keyboard="Numeric" Text="{Binding Model.BillAmount}" Placeholder="Ingresa el monto" />

        <Label Text="Porcentaje de propina:" />
        <Slider Minimum="0" Maximum="50" Value="{Binding Model.TipPercentage}" />
        <Label Text="{Binding Model.TipPercentage, StringFormat='Propina: {0:F0}%'}" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="10%" Command="{Binding SetTipCommand}" CommandParameter="10" />
            <Button Text="15%" Command="{Binding SetTipCommand}" CommandParameter="15" />
            <Button Text="20%" Command="{Binding SetTipCommand}" CommandParameter="20" />
        </HorizontalStackLayout>

        <Label Text="Cantidad de personas:" />
        <Entry Keyboard="Numeric" Text="{Binding Model.NumberOfPeople}" Placeholder="Número de personas" />

        <Label Text="{Binding Model.TipAmount, StringFormat='Propina: ${0:F2}'}" />
        <Label Text="{Binding Model.TotalAmount, StringFormat='Total: ${0:F2}'}" />
        <Label Text="{Binding Model.AmountPerPerson, StringFormat='Por persona: ${0:F2}'}" />
    </VerticalStackLayout>
</ContentPage>
